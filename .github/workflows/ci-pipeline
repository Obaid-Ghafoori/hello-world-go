name: CI Pipeline

on:
  push:
    branches:
      - main
      - develop
      - feature/**  
  pull_request:
    branches:
      - main
      - develop
      - feature/**

jobs:
  lint:
    uses: .github/workflows/linting.yml 
    with:
      go-version: '1.20' 

  test-build:  
    uses: .github/workflows/buil-test.yml
    with:
      go-version: '1.20'  
    
  summary:
    runs-on: ubuntu-latest
    needs: [lint, test-build]  
    steps:
      - name: Generate summary
        run: |
          echo "\033[0;32mLinting, testing, and building completed successfully!"